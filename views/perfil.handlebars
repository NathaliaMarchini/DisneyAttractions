    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Recupera os dados do localStorage
            const nomeCompleto = localStorage.getItem('nomeCompleto');
            const telefone = localStorage.getItem('telefone');
            const email = localStorage.getItem('email');

            // Define os valores nos elementos correspondentes, se os elementos existirem
            if (nomeCompleto && telefone && email) {
                const nomePerfilElem = document.getElementById('nome-perfil');
                const nomeCompletoElem = document.getElementById('nome-completo');
                const emailPerfilElem = document.getElementById('email-perfil');
                const telefonePerfilElem = document.getElementById('telefone-perfil');

                if (nomePerfilElem && nomeCompletoElem && emailPerfilElem && telefonePerfilElem) {
                    // Obtém o primeiro nome
                    const primeiroNome = nomeCompleto.split(' ')[0];

                    nomePerfilElem.innerText = primeiroNome;
                    nomeCompletoElem.innerText = nomeCompleto;
                    emailPerfilElem.innerText = email;
                    telefonePerfilElem.innerText = telefone;
                } else {
                    console.error('Alguns elementos do perfil não foram encontrados no DOM.');
                }
            } else {
                console.error('Nenhum dado encontrado no localStorage.');
            }

            // Event listener para excluir conta
            const excluirContaBtn = document.getElementById('excluir-conta-btn');
            if (excluirContaBtn) {
                excluirContaBtn.addEventListener('click', () => {
                    if (confirm('Tem certeza de que deseja excluir sua conta?')) {
                        // Remove os dados do localStorage
                        localStorage.removeItem('nomeCompleto');
                        localStorage.removeItem('telefone');
                        localStorage.removeItem('email');

                        alert('Conta excluída com sucesso!');

                        // Redireciona para a página inicial
                        window.location.href = '/';
                    }
                });
            } else {
                console.error('Botão de excluir conta não encontrado.');
            }
        });
    </script>
