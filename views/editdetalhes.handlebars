</head>

<body>

    <section class="conteudo">{{!-- conteudo --}}

        <div class="nave">
            <div class="cont">
                <div class="one">
                    <a href="/">
                        <img src="/img/homeImg.png" alt="">
                    </a>
                    <a href="/attractions" id="AAtt">Attractions</a>
                </div>
                <div class="two">

                </div>
                <div class="three">
                    <div class="image">
                        <a href="/perfil"><img src="/img/mickeyIcon.png" alt=""></a>
                    </div>
                </div>
            </div>
        </div>

    </section>{{!-- /conteudo --}}


    <div class="segunda">{{!-- div.segunda --}}

        <div class="box">{{!-- div.box --}}
            
            <div class="ladoWhite">
                <div class="formulario">
                    <form action="/detalhes/updateInscricao" method="post">
                        <div class="InfoOne">
                            <label for="Atracao">Atração:</label>
                            <input type="text" id="Atracao" name="atracao" value="{{listaDetalhes.atracao}}">
                        </div>

                        <div class="InfoTwo">
                            <label for="Data">Data:</label>
                            <input type="date" id="Data" name="data" value="{{listaDetalhes.data}}">
                        </div>

                        <div class="InfoThree">
                            <label for="Horario">Horário</label>
                            <input type="time" id="Horario" name="horario" value="{{listaDetalhes.horario}}">
                        </div>

                        <div class="InfoFour">
                            <input type="hidden" name="id" value="{{listaDetalhes.id}}">
                        </div>

                        <div class="botoes">
                            <div class="botaoInscrever">
                                <button type="submit">Atualizar</button>
                            </div>
                            <div class="botaoLimpar">
                                <button type="reset">Limpar</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>{{!-- /box --}}

            <div class="ladoBlue">
                <div class="linhaB" id="linhaUM"></div>
